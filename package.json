{
    "name": "will-be-replaced-by-build-script",
    "version": "4.0.2",
    "author": "PahkaSoft",
    "private": false,
    "license": "MIT",
    "description": "A TypeScript/JavaScript library for powerful string formatting using { } notation.",
    "homepage": "https://github.com/pahkasoft/std-format#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/pahkasoft/std-format.git"
    },
    "bugs": {
        "url": "https://github.com/pahkasoft/std-format/issues"
    },
    "files": [
        "./dist/index.d.ts",
        "./dist/index.js",
        "./dist/index.js.map",
        "./dist/index.mjs",
        "./dist/index.mjs.map",
        "./dist/index.global.js",
        "package.json",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "unpkg": "./dist/index.global.js",
    "jsdelivr": "./dist/index.global.js",
    "exports": {
        ".": {
            "browser": {
                "require": {
                    "types": "./dist/index.d.ts",
                    "default": "./dist/index.js"
                },
                "import": {
                    "types": "./dist/index.d.ts",
                    "default": "./dist/index.mjs"
                }
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            }
        }
    },
    "dependencies": {
        "jsbi": "^4.3.2"
    },
    "devDependencies": {
        "@swc/core": "^1.13.5",
        "@types/jasmine": "^5.1.12",
        "benchmark": "^2.1.4",
        "cross-env": "^10.1.0",
        "jasmine": "^5.12.0",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-cli": "^2.0.0",
        "karma-jasmine": "^5.1.0",
        "karma-webpack": "^5.0.1",
        "npm-watch": "^0.13.0",
        "rimraf": "^6.0.1",
        "ts-loader": "^9.5.4",
        "tsup": "^8.5.0",
        "typedoc": "^0.28.14",
        "typescript": "latest",
        "webpack": "^5.102.1"
    },
    "watch": {
        "build:dev": {
            "patterns": [
                "src"
            ],
            "extensions": "ts",
            "quiet": false
        }
    },
    "scripts": {
        "build": "node ./scripts/build-variants.mjs && npm install --workspaces",
        "test": "karma start",
        "docs": "typedoc",
        "start:test-app": "npm run start --workspace extras/test-app",
        "test-script:cjs": "node ./extras/test-scripts/node-cjs.js",
        "test-script:esm": "node ./extras/test-scripts/node-esm.mjs",
        "test-script:browser": "start ./extras/test-scripts/browser.html",
        "test-script:all": "npm run test-script:cjs && npm run test-script:esm && npm run test-script:browser"
    },
    "browserslist": [
        "defaults"
    ],
    "workspaces": [
        ".",
        "dist/std-format",
        "dist/sbrockma-std-format",
        "dist/tspro-brace-format",
        "extras/test-app",
        "extras/test-format-lib"
    ]
}